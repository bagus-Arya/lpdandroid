<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KolektorHomeActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_page"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistem Pencatatan Tabungan"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="187dp"
        android:layout_height="185dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:srcCompat="@mipmap/logo_lpd_foreground" />

    <androidx.cardview.widget.CardView
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_dt_kolektor"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Profile Saya"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_dt_kolektor_nasabah"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_kolektor_validasi_setoran"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Validasi Setoran"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_kolektor_validasi_penarikan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_dt_kolektor_nasabah" />

            <Button
                android:id="@+id/btn_kolektor_validasi_penarikan"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Validasi Penarikan"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_kolektor_history"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_kolektor_validasi_setoran" />

            <Button
                android:id="@+id/btn_kolektor_history"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="History Transaksi"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_kolektor_validasi_penarikan" />

            <Button
                android:id="@+id/btn_dt_kolektor_nasabah"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Nasabah"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_kolektor_validasi_setoran"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_dt_kolektor" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Logout"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_kolektor_history" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard Kolektor"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:textColor="@color/textColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>