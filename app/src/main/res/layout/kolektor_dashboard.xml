<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KolektorHomeActivity"
    android:orientation="vertical"
    android:background="@color/bgpage"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="187dp"
        android:layout_height="185dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166"
        app:srcCompat="@mipmap/logo_lpd_foreground" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.112">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_dt_kolektor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Data Kolektor"
                android:backgroundTint="@color/secondary"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_regist_nasabah"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:backgroundTint="@color/secondary"
                android:text="Pendaftaran Nasabah"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_dt_nasabah"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Data Nasabah"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_setoran"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Setoran Tunai"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_penarikan"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Penarikan Tunai"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_history_transaksi"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="History Transaksi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Logout"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/show_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>