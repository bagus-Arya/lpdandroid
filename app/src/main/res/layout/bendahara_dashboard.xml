<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_page"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".BendaharaHomeActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="187dp"
        android:layout_height="185dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:srcCompat="@mipmap/logo_lpd_foreground" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistem Pencatatan Tabungan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:textColor="@color/textColor"/>

<!--    <TextView-->
<!--        android:id="@+id/show_nama_bendahara"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="XXXXX"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/imageView4"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent" />-->

    <androidx.cardview.widget.CardView
        android:layout_width="336dp"
        android:layout_height="442dp"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_logout_bendahara"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Logout"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_dt_laporan_penarikan" />

            <Button
                android:id="@+id/btn_dt_validasi_setoran"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Validasi Setoran"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_dt_validasi_penarikan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_req_penarikan" />

            <Button
                android:id="@+id/btn_dt_laporan_penarikan"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Laporan Penarikan"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_logout_bendahara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_dt_laporan_setoran" />

            <Button
                android:id="@+id/btn_dt_validasi_penarikan"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Validasi Penarikan"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_dt_laporan_setoran"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_dt_validasi_setoran" />

            <Button
                android:id="@+id/btn_dt_profile_nasabah"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Profil Saya"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_req_penarikan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_dt_laporan_setoran"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Laporan Setoran"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_dt_laporan_penarikan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_dt_validasi_penarikan" />

            <Button
                android:id="@+id/btn_req_penarikan"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/secondary"
                android:text="Grafik Kinerja"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/btn_dt_validasi_setoran"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_dt_profile_nasabah" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard Bendahara"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:textColor="@color/textColor"/>


</androidx.constraintlayout.widget.ConstraintLayout>